<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:layout_marginTop="55dp">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="cs371m.hermes.futuremessenger.EditTextMessageActivity"
        tools:showIn="@layout/activity_edit_text_message">
        <LinearLayout
            android:id="@+id/layout_recipients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <LinearLayout
                android:id="@+id/recipients_list_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/recipients_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/recipients"
                    android:paddingBottom="4dp"
                    android:textStyle="bold"
                    android:textSize="18sp" />
                <ListView
                    android:id="@+id/selected_contacts_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:transcriptMode="alwaysScroll"
                    android:divider="@null"
                    android:dividerHeight="0dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/input_buttons_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/choose_contact_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="3dp"
                    android:layout_weight="1"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/colorAccent"
                    android:clickable="true">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/plain_white"
                        android:text="@string/choose_contacts"
                        android:padding="10dp"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textStyle="bold"/>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/enter_number_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="3dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/colorAccent"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/plain_white"
                        android:text="@string/add_phone_number"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:padding="10dp" />
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <EditText
                android:id="@+id/recipients_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:hint="@string/add_phone_number"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_datetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textview_datetime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/date_and_time"
                android:textStyle="bold"
                android:textSize="18sp" />
            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/button_date"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                app:cardElevation="3dp"
                android:layout_weight="1"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/colorAccent"
                android:clickable="true"
                android:onClick="showDatePickerDialog">
                <TextView
                    android:id="@+id/button_date_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/plain_white"
                    android:text="@string/error"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:padding="10dp" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/button_time"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                app:cardElevation="3dp"
                android:layout_weight="1"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/colorAccent"
                android:clickable="true"
                android:onClick="showTimePickerDialog">
                <TextView
                    android:id="@+id/button_time_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/plain_white"
                    android:text="@string/error"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:padding="10dp" />
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_attachment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/header_image"
                android:textStyle="bold"
                android:textSize="18sp"/>
            <ImageButton
                android:id="@+id/button_attachment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:scaleType="fitCenter"
                android:maxHeight="180dp"
                android:adjustViewBounds="true"
                android:src="@drawable/picture_icon"
                android:onClick="selectAttachment"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/header_text"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/message_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences|textMultiLine"
                android:minLines="1"
                android:maxLines="5"
                android:scrollHorizontally="false"
                android:imeOptions="actionDone"
                android:hint="@string/enter_message" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>